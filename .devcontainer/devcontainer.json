{
  "name": "Day/Night Classifier Dev Env",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "gui_app/app.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "tamasfe.even-better-toml"
      ]
    }
  },
  "updateContentCommand": "pip3 install --user numpy pandas scikit-learn scikit-image pillow streamlit joblib matplotlib altair watchdog && echo 'âœ… Enterprise Environment Ready'",
  "postAttachCommand": {
    "server": "streamlit run gui_app/app.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Streamlit Dashboard",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}